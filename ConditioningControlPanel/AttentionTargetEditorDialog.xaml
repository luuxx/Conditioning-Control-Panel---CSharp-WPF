<Window x:Class="ConditioningControlPanel.AttentionTargetEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attention Target Style"
        Height="520" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkerBgBrush}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Attention Target Style"
                   Foreground="{StaticResource PinkBrush}"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Preview Section -->
        <Border Grid.Row="1" Background="{StaticResource AttentionTargetBackgroundBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Preview" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,10"/>
                <Border x:Name="PreviewBorder" HorizontalAlignment="Center"
                        CornerRadius="20" Padding="20,10,20,10" Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
                    </Border.Effect>
                    <TextBlock x:Name="PreviewText" Text="GOOD GIRL"
                               FontSize="40" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect x:Name="PreviewTextShadow" BlurRadius="3" ShadowDepth="2" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </StackPanel>
        </Border>

        <!-- Settings -->
        <Border Grid.Row="2" Background="{StaticResource PanelBgBrush}" CornerRadius="8" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Preset Buttons -->
                    <TextBlock Text="Quick Presets" Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,0,0,8"/>
                    <WrapPanel Margin="0,0,0,15">
                        <Button Content="Purple Classic" Style="{StaticResource SecondaryButton}"
                                Margin="0,0,8,8" Click="PresetPurple_Click"/>
                        <Button Content="Pink Bubbly" Style="{StaticResource SecondaryButton}"
                                Margin="0,0,8,8" Click="PresetPink_Click"/>
                        <Button Content="Neon Green" Style="{StaticResource SecondaryButton}"
                                Margin="0,0,8,8" Click="PresetGreen_Click"/>
                        <Button Content="Ocean Blue" Style="{StaticResource SecondaryButton}"
                                Margin="0,0,8,8" Click="PresetBlue_Click"/>
                    </WrapPanel>

                    <!-- Color 1 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Primary Color" Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="BtnColor1" Grid.Column="1" Style="{StaticResource ColorButton}"
                                Click="BtnColor1_Click"/>
                        <TextBlock x:Name="TxtColor1" Grid.Column="2" Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11"/>
                    </Grid>

                    <!-- Color 2 -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Secondary Color" Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="BtnColor2" Grid.Column="1" Style="{StaticResource ColorButton}"
                                Click="BtnColor2_Click"/>
                        <TextBlock x:Name="TxtColor2" Grid.Column="2" Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11"/>
                    </Grid>

                    <!-- Text Color -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Text Color" Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="BtnTextColor" Grid.Column="1" Style="{StaticResource ColorButton}"
                                Click="BtnTextColor_Click"/>
                        <TextBlock x:Name="TxtTextColor" Grid.Column="2" Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11"/>
                    </Grid>

                    <!-- Floating Text Toggle -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Floating Text" Foreground="White" VerticalAlignment="Center"
                                   ToolTip="Remove background - just show text (transparent holes visible)"/>
                        <CheckBox x:Name="ChkFloatingText" Grid.Column="1" VerticalAlignment="Center"
                                  Checked="ChkFloatingText_Changed" Unchecked="ChkFloatingText_Changed"/>
                    </Grid>

                    <!-- Border Toggle -->
                    <Grid x:Name="BorderToggleRow" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Show Border" Foreground="White" VerticalAlignment="Center"/>
                        <CheckBox x:Name="ChkShowBorder" Grid.Column="1" VerticalAlignment="Center"
                                  Checked="ChkShowBorder_Changed" Unchecked="ChkShowBorder_Changed"/>
                    </Grid>

                    <!-- Border Color (only visible when border enabled) -->
                    <Grid x:Name="BorderColorRow" Margin="0,0,0,12" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Border Color" Foreground="White" VerticalAlignment="Center"/>
                        <Button x:Name="BtnBorderColor" Grid.Column="1" Style="{StaticResource ColorButton}"
                                Click="BtnBorderColor_Click"/>
                        <TextBlock x:Name="TxtBorderColor" Grid.Column="2" Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11"/>
                    </Grid>

                    <!-- Font -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Font" Foreground="White" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbFont" Grid.Column="1" Background="{StaticResource DeepBlueBrush}"
                                  Foreground="White" Padding="8,6"
                                  SelectionChanged="CmbFont_SelectionChanged">
                            <ComboBoxItem Content="Segoe UI" Tag="Segoe UI"/>
                            <ComboBoxItem Content="Comic Sans MS" Tag="Comic Sans MS"/>
                            <ComboBoxItem Content="Impact" Tag="Impact"/>
                            <ComboBoxItem Content="Arial Black" Tag="Arial Black"/>
                            <ComboBoxItem Content="Verdana" Tag="Verdana"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer Buttons -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Test Target" Style="{StaticResource SecondaryButton}"
                    Click="BtnTest_Click" ToolTip="Spawn a test target to see how it looks"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0" Click="BtnCancel_Click"/>
                <Button Content="Save" Style="{StaticResource ActionButton}"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
