<Window x:Class="ConditioningControlPanel.TutorialOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">

    <Window.Resources>
    </Window.Resources>

    <Grid x:Name="RootGrid" MouseLeftButtonDown="RootGrid_MouseLeftButtonDown">
        <!-- Click blocker - nearly transparent to block clicks through AllowsTransparency window -->
        <Rectangle Fill="#01000000" IsHitTestVisible="True"/>
        <Canvas x:Name="SpotlightCanvas" Background="Transparent" IsHitTestVisible="False"/>

        <Border x:Name="TextPanel"
                Background="#F0252542"
                CornerRadius="12"
                BorderBrush="{StaticResource PinkBrush}"
                BorderThickness="2"
                MaxWidth="420"
                Padding="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect Color="{StaticResource PinkColor}" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TxtStepCounter"
                           Grid.Row="0"
                           Text="Step 1 of 6"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="11"
                           Margin="0,0,0,8"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock x:Name="TxtIcon" Text="~" FontSize="24" Foreground="{StaticResource PinkBrush}" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTitle"
                               Text="Welcome!"
                               Foreground="{StaticResource PinkBrush}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <TextBlock x:Name="TxtDescription"
                           Grid.Row="2"
                           Text="Description text goes here..."
                           Foreground="#C0C0C0"
                           FontSize="13"
                           TextWrapping="Wrap"
                           LineHeight="20"
                           Margin="0,0,0,10"/>

                <Button x:Name="BtnSupport"
                        Grid.Row="3"
                        Content="Visit linktr.ee/CodeBambi"
                        Click="BtnSupport_Click"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,15">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value= "{StaticResource PinkBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="20,10"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkPinkBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnSkip"
                            Grid.Column="0"
                            Content="Skip Tutorial"
                            Click="BtnSkip_Click"
                            Background="Transparent"
                            Foreground="{StaticResource TextMutedBrush}"
                            BorderThickness="0"
                            FontSize="12"
                            Cursor="Hand"
                            Padding="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#A0A0B0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnPrevious"
                            Grid.Column="2"
                            Content="Previous"
                            Click="BtnPrevious_Click"
                            Margin="0,0,10,0"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource PinkBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PinkBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="15,8"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#20FF69B4"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="BtnNext"
                            Grid.Column="3"
                            Content="Next"
                            Click="BtnNext_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value ="{StaticResource PinkBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="20,10"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource DarkPinkBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
