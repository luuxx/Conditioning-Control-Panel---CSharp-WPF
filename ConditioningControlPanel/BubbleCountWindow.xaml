<Window x:Class="ConditioningControlPanel.BubbleCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bubble Count Challenge"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Black"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="True"
        ResizeMode="NoResize"
        FontFamily="Comic Sans MS, Segoe UI">

    <Grid x:Name="MainGrid">
        <!-- Video Player Container - VideoView added programmatically -->
        <!-- Bubbles are now separate windows to avoid blocking LibVLC rendering -->
        <Grid x:Name="VideoContainer" Background="Black"/>

        <!-- Top Info Bar -->
        <Border Background="{StaticResource OverlayBackgroundBrush}"
                VerticalAlignment="Top"
                Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🫧 COUNT THE BUBBLES! 🫧"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource PinkBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource PinkColor}" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TxtDifficulty"
                           Text=" (Medium)"
                           FontSize="22"
                           Foreground="{StaticResource LightPinkBrush}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Strict Mode Indicator -->
        <TextBlock x:Name="TxtStrict"
                   Text="🔒 STRICT"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource WarningBrush}"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="0,15,20,0"
                   Visibility="Collapsed"/>

        <!-- ESC Hint -->
        <TextBlock x:Name="TxtEscHint"
                   Text="Press ESC to skip (won't earn XP)"
                   FontSize="16"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
    </Grid>
</Window>
