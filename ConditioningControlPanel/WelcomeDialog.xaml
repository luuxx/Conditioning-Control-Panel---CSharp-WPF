<Window x:Class="ConditioningControlPanel.WelcomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" 
        Height="670" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="{StaticResource DarkerBgBrush}" CornerRadius="12" BorderBrush="{StaticResource PinkBrush}" BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar with Pink Background -->
            <Border Grid.Row="0" Background="{StaticResource PinkBrush}" CornerRadius="8" Margin="-10,-10,-10,20" Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="💖" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Conditioning Control Panel" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Welcome Message -->
            <TextBlock Grid.Row="1" Text="Welcome, Good Girl!" 
                       Foreground="{StaticResource PinkBrush}" FontSize="26" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,20"/>
            
            <!-- Description -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Foreground="{StaticResource TextLightBrush}" FontSize="14" TextWrapping="Wrap" LineHeight="24" TextAlignment="Center">
                    <Run Text="This application is designed to enhance your conditioning experience."/>
                </TextBlock>
                
                <TextBlock Foreground="{StaticResource TextLightBrush}" FontSize="14" TextWrapping="Wrap" LineHeight="24" TextAlignment="Center" Margin="0,15,0,0">
                    <Run Text="Features unlock as you level up through use. Start the engine and let the conditioning begin!"/>
                </TextBlock>
                
                <Border Background="{StaticResource PanelBgBrush}" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Foreground="{StaticResource OrangeAccentBrush}" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center">
                            <Run Text="💡 Tips"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource PinkBrush}" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Margin="0,8,0,0" FontWeight="SemiBold">
                            <Run Text="• Click the"/>
                            <Run Text=" ? " FontWeight="Bold" Foreground="White" Background="{StaticResource PinkBrush}"/>
                            <Run Text="button in the top bar for a full tutorial"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSilverBrush}" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Margin="0,4,0,0">
                            <Run Text="• Hover over any setting to see what it does"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSilverBrush}" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Margin="0,4,0,0">
                            <Run Text="• Add videos to 'assets/videos' and images to 'assets/images'"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource TextSilverBrush}" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Margin="0,4,0,0">
                            <Run Text="• For gaming: Use 'Borderless Windowed' mode for overlays"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource PanelBgBrush}" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Foreground="{StaticResource OrangeAccentBrush}" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center">
                            <Run Text="⚠️ Performance Warning"/>
                        </TextBlock>
                        <TextBlock Foreground="{StaticResource OrangeAccentBrush}" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Margin="0,8,0,0">
                            <Run Text="Running many features, especially with high frequencies or large media, can be resource-intensive."/>
                            <LineBreak/>
                            <Run Text="If you experience performance issues on low-end PCs, consider reducing active features."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Button -->
            <Button Grid.Row="3" Content="💜 Let's Begin!" Click="BtnBegin_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource PinkBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="40,16"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PinkBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
