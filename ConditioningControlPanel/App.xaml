<Application x:Class="ConditioningControlPanel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnLastWindowClose">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Shared theme resources - explicitly using pack URIs to ensure assembly-level loading -->
        <ResourceDictionary Source="pack://application:,,,/ConditioningControlPanel;component/Resources/Theme/Default/Colors.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ConditioningControlPanel;component/Resources/Theme/Default/Brushes.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ConditioningControlPanel;component/Resources/Theme/Default/Controls.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/ConditioningControlPanel;component/Resources/Theme/Converters.xaml"/>

        <!-- Keep any existing app-level dictionaries below -->
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
