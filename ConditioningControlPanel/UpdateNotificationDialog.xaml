<Window x:Class="ConditioningControlPanel.UpdateNotificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        Height="550" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{StaticResource DarkerBgBrush}" CornerRadius="12" BorderBrush="{StaticResource PinkBrush}" BorderThickness="2">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,18">
                <TextBlock Text="&#x2B06;" FontSize="28" Foreground="{StaticResource PinkBrush}" VerticalAlignment="Center" Margin="0,0,14,0"/>
                <TextBlock Text="Update Available!" Foreground="{StaticResource PinkBrush}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Version Info -->
            <StackPanel Grid.Row="1" Margin="0,0,0,16">
                <TextBlock x:Name="TxtVersionInfo"
                           Foreground="{StaticResource TextLightBrush}" FontSize="15" TextWrapping="Wrap" LineHeight="22"/>
                <TextBlock x:Name="TxtFileSize"
                           Foreground="{StaticResource TextMutedBrush}" FontSize="13" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Release Notes -->
            <Border Grid.Row="2" Background="{StaticResource PanelBgBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="What's New" Foreground="{StaticResource PinkBrush}" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="280">
                        <TextBlock x:Name="TxtReleaseNotes"
                                   Foreground="{StaticResource LightGrayBrush}" FontSize="13" TextWrapping="Wrap"
                                   Text="No release notes available."/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnLater" Grid.Column="0" Content="Later" Margin="0,0,10,0"
                        Click="BtnLater_Click" IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource PanelBgBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Padding" Value="24,14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                                Padding="{TemplateBinding Padding}" BorderBrush="{StaticResource PanelAccentBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource GridMutedBlueBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="BtnInstall" Grid.Column="1" Content="Install Update" Margin="10,0,0,0"
                        Click="BtnInstall_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource PinkBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="Padding" Value="24,14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource GridMutedPinkAccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
