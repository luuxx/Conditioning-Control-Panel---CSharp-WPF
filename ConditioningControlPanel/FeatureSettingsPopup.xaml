<UserControl x:Class="ConditioningControlPanel.FeatureSettingsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Background="Transparent">

    <Border Background="{StaticResource DeepBlueBrush}" CornerRadius="10" BorderBrush="{StaticResource PinkBrush}" BorderThickness="2"
            Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Minute -->
                <RowDefinition Height="*"/>     <!-- Settings -->
                <RowDefinition Height="Auto"/>  <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock x:Name="TxtIcon" Text="âš¡" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock x:Name="TxtFeatureName" Text="Feature Name"
                               Foreground="{StaticResource PinkBrush}" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TxtEventType" Text="Start Event"
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                </StackPanel>
            </StackPanel>

            <!-- Minute Position -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Minute" Foreground="{StaticResource TextSilverBrush}" FontSize="12" VerticalAlignment="Center"/>
                <Slider x:Name="SliderMinute" Grid.Column="1"
                        Minimum="0" Maximum="120" Value="0"
                        ValueChanged="SliderMinute_ValueChanged"/>
                <TextBlock x:Name="TxtMinuteValue" Grid.Column="2" Text="0"
                           Foreground="{StaticResource TextLightBrush}" FontSize="12" FontWeight="SemiBold"
                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Dynamic Settings -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <StackPanel x:Name="SettingsPanel">
                    <!-- Settings will be generated dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnDelete" Content="Delete" Click="BtnDelete_Click"
                        Background="{StaticResource WarningRedBackgroundBrush}" Foreground="White" Padding="15,8"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" x:Name="BtnDone" Content="Done" Click="BtnDone_Click"
                        Background="{StaticResource PinkBrush}" Foreground="White" Padding="20,8"
                        FontWeight="SemiBold" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PinkBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
