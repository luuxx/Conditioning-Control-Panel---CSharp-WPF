<Window x:Class="ConditioningControlPanel.DisplayNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Your Display Name"
        Height="240" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False">

    <Window.Resources>
        <SolidColorBrush x:Key="PinkBrush" Color="#FF69B4"/>
        <SolidColorBrush x:Key="DarkPinkBrush" Color="#FF1493"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFB347"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PinkBrush}" BorderThickness="1" CornerRadius="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock x:Name="TxtTitle" Grid.Row="0" Text="Welcome! Choose Your Display Name"
                       Foreground="{StaticResource PinkBrush}"
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Warning -->
            <Border x:Name="WarningPanel" Grid.Row="1" Background="#2A2A3E" CornerRadius="4" Padding="12,8" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Warning:" Foreground="{StaticResource WarningBrush}"
                               FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock Text=" This name cannot be changed later!"
                               Foreground="{StaticResource WarningBrush}"
                               FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Prompt -->
            <TextBlock Grid.Row="2" Text="Enter the name you'd like to be called:"
                       Foreground="White" FontSize="13" Margin="0,0,0,8"/>

            <!-- Input -->
            <TextBox x:Name="TxtDisplayName" Grid.Row="3"
                     Background="#252542" Foreground="White"
                     BorderBrush="{StaticResource PinkBrush}"
                     Padding="12,10" FontSize="15"
                     MaxLength="20"
                     KeyDown="TxtDisplayName_KeyDown"/>

            <!-- Character count -->
            <TextBlock x:Name="TxtCharCount" Grid.Row="4" Text="0/20 characters"
                       Foreground="#888" FontSize="11" Margin="0,5,0,0"
                       HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" Width="90" Padding="10,10" Margin="0,0,10,0"
                        Background="#404060" Foreground="White" BorderThickness="0"
                        Click="BtnCancel_Click" Cursor="Hand" FontSize="13"/>
                <Button x:Name="BtnConfirm" Content="Confirm" Width="90" Padding="10,10"
                        Background="{StaticResource PinkBrush}" Foreground="White"
                        BorderThickness="0" FontWeight="Bold" FontSize="13"
                        Click="BtnConfirm_Click" Cursor="Hand" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
