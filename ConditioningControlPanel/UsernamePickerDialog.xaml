<Window x:Class="ConditioningControlPanel.UsernamePickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Your Display Name" Height="350" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{StaticResource DarkerBgBrush}" WindowStyle="None" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="{StaticResource PinkBrush}" BorderThickness="2" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Choose Your Display Name"
                       FontSize="24" FontWeight="Bold" Foreground="{StaticResource PinkBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Subtitle for new users -->
            <TextBlock x:Name="TxtSubtitle" Grid.Row="1"
                       Text="This name will be shown on the leaderboard and to other users."
                       FontSize="12" Foreground="{StaticResource TextSilverBrush}" TextWrapping="Wrap"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- OG Welcome message (hidden by default) -->
            <Border x:Name="OgWelcomePanel" Grid.Row="2" Visibility="Collapsed"
                    Background="#30FFD700" BorderBrush="{StaticResource GoldBrush}" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="⭐ Welcome Back, Pioneer! ⭐"
                               FontSize="16" FontWeight="Bold" Foreground="{StaticResource GoldBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="You've been recognized as a Season 0 OG! Your unlocks and achievements have been restored."
                               FontSize="11" Foreground="White" TextWrapping="Wrap"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Username input -->
            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="Display Name:" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtUsername" FontSize="18" Padding="10,8"
                         Background="{StaticResource PanelBgBrush}" Foreground="White" BorderBrush="{StaticResource PinkBrush}"
                         MaxLength="30" TextChanged="TxtUsername_TextChanged"/>
                <TextBlock x:Name="TxtAvailability" FontSize="11" Margin="0,5,0,0"
                           Foreground="{StaticResource TextSilverBrush}" Text="Enter a unique display name (3-30 characters)"/>
            </StackPanel>

            <!-- Suggested name (from legacy data or provider) -->
            <StackPanel x:Name="SuggestionPanel" Grid.Row="4" Visibility="Collapsed" Margin="0,0,0,10">
                <TextBlock Text="Suggested name from your previous account:"
                           Foreground="{StaticResource TextSilverBrush}" FontSize="11"/>
                <Button x:Name="BtnUseSuggestion" Content="" Padding="10,5"
                        Background="#352545" Foreground="{StaticResource PinkBrush}" BorderThickness="0"
                        Cursor="Hand" Click="BtnUseSuggestion_Click" Margin="0,3,0,0"
                        HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="BtnCancel" Content="Cancel" Padding="20,10"
                        Background="#352545" Foreground="White" BorderThickness="0"
                        Cursor="Hand" Click="BtnCancel_Click" Margin="0,0,10,0"/>
                <Button x:Name="BtnConfirm" Content="Confirm" Padding="20,10"
                        Background="{StaticResource PinkBrush}" Foreground="White" BorderThickness="0"
                        Cursor="Hand" Click="BtnConfirm_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
