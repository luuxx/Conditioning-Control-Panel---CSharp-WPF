<Window x:Class="ConditioningControlPanel.OfflineUsernameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Your Offline Username"
        Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkerBgBrush}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="False">

    <Window.Resources>
        <SolidColorBrush x:Key="PinkBrush" Color="{StaticResource PinkColor}"/>
        <SolidColorBrush x:Key="DarkPinkBrush" Color="{StaticResource DarkPinkColor}"/>
        <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource OfflineUserBlueColor}"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource PinkBrush}" BorderThickness="1" CornerRadius="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Choose Your Offline Username"
                       Foreground="{StaticResource PinkBrush}"
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Info Box -->
            <Border Grid.Row="1" Background="{StaticResource PillBackgroundBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Offline progress is stored locally only and cannot be synced to the leaderboard."
                               Foreground="{StaticResource InfoBrush}"
                               FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
                    <TextBlock Text="You can change this name later in Settings."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11" Margin="0,5,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Prompt -->
            <TextBlock Grid.Row="2" Text="Enter the name you'd like to use:"
                       Foreground="White" FontSize="13" Margin="0,0,0,8"/>

            <!-- Input -->
            <TextBox x:Name="TxtUsername" Grid.Row="3"
                     Background="{StaticResource PanelBgBrush}" Foreground="White"
                     BorderBrush="{StaticResource PinkBrush}"
                     Padding="12,10" FontSize="15"
                     MaxLength="30"
                     KeyDown="TxtUsername_KeyDown"/>

            <!-- Character count -->
            <TextBlock x:Name="TxtCharCount" Grid.Row="4" Text="0/30 characters"
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,5,0,0"
                       HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" Width="90" Padding="10,10" Margin="0,0,10,0"
                        Background="{StaticResource OfflineUserMutedBrush}" Foreground="White" BorderThickness="0"
                        Click="BtnCancel_Click" Cursor="Hand" FontSize="13" FontWeight="SemiBold"/>
                <Button x:Name="BtnConfirm" Content="Confirm" Width="90" Padding="10,10"
                        Background="{StaticResource PinkBrush}" Foreground="White"
                        BorderThickness="0" FontWeight="Bold" FontSize="13"
                        Click="BtnConfirm_Click" Cursor="Hand" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
