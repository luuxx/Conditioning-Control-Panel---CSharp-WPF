<Window x:Class="ConditioningControlPanel.CompanionPromptEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConditioningControlPanel"
        Title="Customize AI Companion"
        Width="700" Height="750"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkerBgBrush}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Converter for hiding empty descriptions -->
        <local:NullOrEmptyToCollapsedConverter x:Key="NullToCollapsedConverter"/>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PinkBrush}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SectionDescription" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="PromptTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PanelBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelAccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style x:Key="ResetButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource CompanionMutedBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PanelBgBrush}" Padding="20,15">
            <StackPanel>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Customize Your AI Companion"
                                   Foreground="{StaticResource PinkBrush}"
                                   FontSize="20" FontWeight="Bold"/>
                        <Border Background="{StaticResource WarningBrush}" CornerRadius="3" Padding="6,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="BETA" Foreground="White" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    <!-- Active Prompt Badge -->
                    <Border x:Name="ActivePromptBadge" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="{StaticResource DarkerBgBrush}" CornerRadius="12" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active:" Foreground="{StaticResource DarkGrayBrush}" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtActivePromptName" Text="Default" Foreground="{StaticResource LightPurpleBrush}"
                                       FontSize="11" FontWeight="SemiBold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <TextBlock Text="Edit the prompts that control how your companion thinks and responds. Changes are saved automatically when you close this window."
                           Foreground="{StaticResource TextMutedBrush}" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <CheckBox x:Name="ChkUseCustom" Content="Enable Custom Prompts"
                              Foreground="White" VerticalContentAlignment="Center"
                              Checked="ChkUseCustom_Changed" Unchecked="ChkUseCustom_Changed"/>
                    <TextBlock Text="(Uncheck to use default prompts)"
                               Foreground="{StaticResource DarkGrayBrush}" FontSize="11"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel x:Name="ContentPanel">

                <!-- Section 1: Personality -->
                <Expander IsExpanded="True" Margin="0,0,0,15">
                    <Expander.Header>
                        <TextBlock Text="Personality (Normal Mode)" Style="{StaticResource SectionHeader}"/>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            Define who your companion is. Their vibe, tone, and what topics they like to talk about.
                            This is used when Slut Mode is OFF.
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtPersonality" Style="{StaticResource PromptTextBox}"
                                     Height="120" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetPersonality_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 2: Explicit Reaction -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <TextBlock Text="Explicit Topic Handling" Style="{StaticResource SectionHeader}"/>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            How should your companion react when you mention explicit topics in Normal Mode?
                            (In Slut Mode, this is ignored and they respond explicitly.)
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtExplicitReaction" Style="{StaticResource PromptTextBox}"
                                     Height="100" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetExplicitReaction_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 3: Slut Mode -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Slut Mode Personality" Style="{StaticResource SectionHeader}"/>
                            <TextBlock Text="(Patreon)" Foreground="{StaticResource PatreonPurpleBrush}" FontSize="11"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            Define the companion's personality when Slut Mode is enabled.
                            This is more explicit and trigger-heavy. Requires Patreon Premium.
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtSlutMode" Style="{StaticResource PromptTextBox}"
                                     Height="140" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetSlutMode_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 4: Knowledge Base -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <TextBlock Text="Knowledge Base" Style="{StaticResource SectionHeader}"/>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            Files, videos, and resources your companion knows about and can recommend.
                            List audio files, video series, creators, etc.
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtKnowledgeBase" Style="{StaticResource PromptTextBox}"
                                     Height="140" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetKnowledgeBase_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 5: Context Reactions -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <TextBlock Text="Screen Awareness Reactions" Style="{StaticResource SectionHeader}"/>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            How your companion reacts to different apps and websites you're viewing.
                            The companion receives context like [App: Chrome | Title: Reddit - r/BambiSleep].
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtContextReactions" Style="{StaticResource PromptTextBox}"
                                     Height="180" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetContextReactions_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 6: Output Rules -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <TextBlock Text="Output Rules" Style="{StaticResource SectionHeader}"/>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            Control how long responses are, emoji usage, and response frequency.
                            Keep responses short for a texting feel.
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtOutputRules" Style="{StaticResource PromptTextBox}"
                                     Height="100" TextChanged="OnTextChanged"/>
                            <Button Grid.Column="1" Content="Reset" Style="{StaticResource ResetButton}"
                                    VerticalAlignment="Top" Margin="5,0,0,0"
                                    Click="ResetOutputRules_Click"/>
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Section 7: Global Knowledge Base Links -->
                <Expander IsExpanded="False" Margin="0,0,0,15">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Global Knowledge Base Links" Style="{StaticResource SectionHeader}"/>
                            <TextBlock Text="(All Personalities)" Foreground="{StaticResource CompanionAccentGreenBrush}" FontSize="11"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Expander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Style="{StaticResource SectionDescription}">
                            Add URLs to hypno content that your companion knows about and can recommend.
                            These links apply to ALL personalities, regardless of which preset is active.
                        </TextBlock>

                        <!-- Links List -->
                        <Border Background="{StaticResource PanelBgBrush}" CornerRadius="4" Padding="8" Margin="0,0,0,8">
                            <ListBox x:Name="LstKnowledgeLinks" Height="120"
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="White" FontSize="11"
                                     SelectionMode="Single">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,2">
                                            <TextBlock Text="{Binding Title}" Foreground="{StaticResource PinkBrush}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Url}" Foreground="{StaticResource DarkGrayBrush}" FontSize="10"/>
                                            <TextBlock Text="{Binding Description}" Foreground="{StaticResource TextSilverBrush}" FontSize="10"
                                                       TextWrapping="Wrap" Visibility="{Binding Description, Converter={StaticResource NullToCollapsedConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Add/Remove Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="+ Add Link" Style="{StaticResource ResetButton}"
                                    Padding="12,6" Click="AddKnowledgeLink_Click"/>
                            <Button Content="Remove Selected" Style="{StaticResource ResetButton}"
                                    Padding="12,6" Margin="8,0,0,0" Click="RemoveKnowledgeLink_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource PanelBgBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnResetAll" Content="Reset All to Defaults"
                        Style="{StaticResource ResetButton}"
                        HorizontalAlignment="Left"
                        Click="ResetAll_Click"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnCancel" Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Width="80" Margin="0,0,10,0"
                            Click="BtnCancel_Click"/>
                    <Button x:Name="BtnSave" Content="Save"
                            Style="{StaticResource ActionButton}"
                            Width="80"
                            Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
