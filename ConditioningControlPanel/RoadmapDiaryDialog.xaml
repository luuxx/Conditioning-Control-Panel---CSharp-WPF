<Window x:Class="ConditioningControlPanel.RoadmapDiaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transformation Diary"
        Width="500" Height="620"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#1A1A2E" BorderBrush="{StaticResource PinkBrush}" BorderThickness="2" CornerRadius="15">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="Auto"/>  <!-- Photo -->
                <RowDefinition Height="Auto"/>  <!-- Step Info -->
                <RowDefinition Height="Auto"/>  <!-- Stats -->
                <RowDefinition Height="*"/>     <!-- Note -->
                <RowDefinition Height="Auto"/>  <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="TxtStepNumber" Text="Step 1"
                               Foreground="#888888" FontSize="12"/>
                    <TextBlock x:Name="TxtStepTitle" Text="The Blank Slate"
                               Foreground="{StaticResource PinkBrush}" FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" Foreground="#888888"
                        BorderThickness="0" FontSize="16" FontWeight="Bold"
                        Cursor="Hand" Padding="5"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource PinkBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Full Resolution Photo -->
            <Border Grid.Row="1" CornerRadius="12" Background="#252542"
                    Margin="0,0,0,15" Height="280" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgFullPhoto" Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock x:Name="TxtNoPhoto" Text="No photo available"
                               Foreground="#666666" FontSize="14"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Objective/Requirement -->
            <Border Grid.Row="2" Background="#252542" CornerRadius="10"
                    Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Objective" Foreground="#888888" FontSize="11" Margin="0,0,0,4"/>
                    <TextBlock x:Name="TxtObjective" Text="" Foreground="White"
                               FontSize="13" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Completion Stats -->
            <Border Grid.Row="3" Background="#252542" CornerRadius="10"
                    Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Completed" Foreground="#888888"
                                   FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtCompletedDate" Text="Jan 15, 2024"
                                   Foreground="White" FontSize="14" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        <TextBlock x:Name="TxtCompletedTime" Text="3:45 PM"
                                   Foreground="#888888" FontSize="11"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Time Taken" Foreground="#888888"
                                   FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtTimeTaken" Text="45 minutes"
                                   Foreground="White" FontSize="14" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- User Note -->
            <Border Grid.Row="4" Background="#252542" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Personal Note" Foreground="#888888"
                               FontSize="11" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtUserNote" Grid.Row="1"
                             Background="Transparent" Foreground="White"
                             BorderThickness="0" TextWrapping="Wrap"
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontSize="13" Padding="0"
                             CaretBrush="{StaticResource PinkBrush}"/>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Save Note" Background="{StaticResource PinkBrush}"
                        Foreground="White" Padding="20,10"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,10,0"
                        FontWeight="Bold"
                        Click="BtnSaveNote_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1493"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Close" Background="#404060"
                        Foreground="White" Padding="20,10"
                        BorderThickness="0" Cursor="Hand"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#505080"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
